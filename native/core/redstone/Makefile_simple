CXX = g++
CXXFLAGS = -std=c++20 -Wall -Wextra -O2 -pthread
SOURCES = test_simple_redstone.cpp simple_redstone_engine.cpp
TARGET = test_simple_redstone

all: $(TARGET)

$(TARGET): $(SOURCES)
	$(CXX) $(CXXFLAGS) -DDEBUG_REDSTONE $(SOURCES) -o $(TARGET)

clean:
	rm -f $(TARGET)

test: $(TARGET)
	./$(TARGET)

.PHONY: all clean test